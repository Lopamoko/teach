<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create comment table" author="d.gumanov">
        <createTable tableName="COMMENT">
            <column name="COMMENT_ID" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="COMMENT_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="COMMENT_TEXT" type="VARCHAR(5000)">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="COMMENT_USER_FK" referencedTableName="USERS"
                             referencedColumnNames="USER_ID"/>
            </column>
        </createTable>
        <createSequence sequenceName="COMMENT_SEQ"/>
        <createIndex tableName="COMMENT" indexName="COMMENT_USER_IDX">
            <column name="USER_ID"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
